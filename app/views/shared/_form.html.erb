<%= form_with(model: book, local: true) do |f| %>
    <% if book.errors.any? %>
        <div id = 'error_explanation'>
            <h2>Este libro no se pudo crear por las siguientes razones</h2>
            <ul>
            <% book.errors.full_messages.each do |msg|%>
                <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    <div class="form-group">
        <%= f.label :title, "Título" %>
        <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
        <%= f.label :author, "Autor" %>
        <%= f.text_field :author, class: 'form-control' %>
    </div>

    <div class="form-group">
        <%= f.label :status, "Estado del libro" %>
        <%= f.select :status, options_for_select(@statuses), class: 'form-control' %>
    </div>

    <div class="form-group">
        <%= f.label :loan_date, "Fecha de préstamo" %>
        <%= f.date_select :loan_date, class: 'form-control' %>
    </div>

    <div class="form-group">
        <%= f.label :return_date, "Fecha de devolución" %>
        <%= f.date_select :return_date, class: 'form-control' %>
    </div>

    <div class = 'actions'>
        <%= f.submit %>
    </div>
<% end %>
<div class="px-5 py-4 border border-success rounded">
    <%= form_with(model: book, local: true) do |f| %>
        <% if book.errors.any? %>
            <div id = 'error_explanation'>
                <h4>Este libro no se pudo crear por las siguientes razones</h4>
                <ul>
                <% book.errors.full_messages.each do |msg|%>
                    <li class="text-danger"><%= msg %></li>
                    <% end %>
                </ul>
            </div>
        <% end %>
        
        <div class="form-group">
            <strong><%= f.label :title, "Título" %></strong>
            <%= f.text_field :title, class: 'form-control' %>
        </div>

        <div class="form-group">
            <strong><%= f.label :author, "Autor" %></strong>
            <%= f.text_field :author, class: 'form-control' %>
        </div>

        <div class="form-group">
            <strong class="pr-2"><%= f.label :status, "Estado del libro" %></strong>
            <%= f.select :status, options_for_select(@statuses), class: 'form-control' %>
        </div>
                
        <div class="form-group">
            <strong><%= f.label :loan_date, "Fecha de préstamo" %></strong>
            <%= f.date_field :loan_date, class: 'form-control' %></strong>
        </div>

        <div class="form-group">
            <strong><%= f.label :return_date, "Fecha de devolución" %></strong>
            <strong><%= f.date_field :return_date, class: 'form-control' %></strong>
        </div>

        <div class = 'actions'>
            <%= f.submit %>
        </div>
    <% end %>
</div>
<div class="container">
    <div class="container text-center pt-5">
        <h1>Mi Biblioteca</h1>
        <p id="notice" class="text-danger font-weight-bold"><%= notice %></p>
    </div>
    
    <!--Create a new book -->
    <section class="row mt-5">
        <div class="col-md-3">
            <%= link_to 'Ingresar un nuevo libro', books_new_path, class: 'btn btn-success' %>
        </div>
        <!--Search by status-->
        <div class="col-md-9">
            <%= search_form_for @q do |f| %>
                <div class="form-row">
                <div class="col-md-6">
                    <%= f.select :status_eq, options_for_select(Book.statuses, @q.status_eq), {}, {class:"form-control"} %>            
                </div>
                <div class="col-md-3">
                    <%= f.submit "Filtrar por estado", class: "btn btn-primary" %>
                </div>
            <% end %>
        </div>
    </section>
    
    <!--Books table-->
    <table class="table mt-5">
    <thead>
        <tr>
        <th><%= sort_link(@q, :title) %></th>
        <th>Autor</th>
        <th>Estado</th>
        <th>Fecha de préstamo</th>
        <th>Fecha de devolución</th>
        <th colspan="3"></th>
        </tr>
    </thead>
    <tbody>
        <% @books.each do |book| %>
        <tr> 
            <td><%= book.title %></td>
            <td><%= book.author %></td>
            <td><%= book.status %></td>
            <td><%= book.loan_date %></td>
            <td><%= book.return_date %></td>
            <td><%= link_to 'Show', book %></td>
            <td><%= link_to 'Edit', edit_book_path(book.id)%></td>
            <td><%= link_to 'Destroy', book, method: :delete, data: {confirm: "Estás seguro que quieres borrar el libro: #{book.title}?"} %></td>
        </tr>
        <% end %>
    </tbody>
    </table>
</div>
